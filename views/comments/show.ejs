<% layout('./layouts/boilerplate') -%>
<div class="ui stackable two column grid" style="margin: 3rem;">
    <div class="column">
        <div class="ui card">
            <div class="content">
                <%if(post.author.id.equals(currentUser.id)){%>
                <div class="right floated">
                    <a href="/posts/<%=post.id%>/edit"
                        ><i class="edit icon"></i
                    ></a>
                </div>
                <%}%>
                <img class="ui avatar image" src="<%=post.author.avatar%>" />
                <%=post.author.username%>
            </div>
            <div class="image">
                <img src="<%=post.image%>" />
            </div>
            <div class="content">
                <p><%= post.description %></p>
                <span class="right floated meta">
                    <%=moment(post.createdAt).fromNow() %>
                </span>
                <i class="comment icon"></i>
                <a
                    class="a__tag"
                    href="/posts/<%=post.id%>/comments"
                    title="Add Comments"
                >
                    <%=post.comments.length%> comments
                </a>
            </div>
        </div>
    </div>

    <div class="column">
        <div class="ui comments">
            <h3 class="ui dividing header">Comments</h3>
            <div class="ui grid">
                <% post.comments.forEach(function(comment){ %>
                <div class="two column row">
                    <div class="left floated column">
                        <div class="comment">
                            <a class="avatar">
                                <img
                                    src="<%=comment.author.avatar%>"
                                    style="
                                        max-height: 36px;
                                        border-radius: 50%;
                                    "
                                />
                            </a>
                            <div class="content">
                                <a class="author"
                                    ><%=comment.author.username%>
                                </a>
                                <div class="metadata">
                                    <span class="date"
                                        ><%=moment(comment.createdAt).fromNow()
                                        %></span
                                    >
                                </div>
                                <div class="text">
                                    <%=comment.text%>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="right floated column">
                        <% if(comment.author.id.equals(currentUser.id)){ %>
                        <div class="ui buttons">
                            <a
                                class="mini circular ui vertical animated teal button"
                                href="/posts/<%=post.id%>/comments/<%=comment.id%>/edit"
                            >
                                <div class="hidden content">Edit</div>
                                <div class="visible content">
                                    <i class="pencil alternate icon"></i>
                                </div>
                            </a>
                            <div class="or"></div>
                            <form
                                action="/posts/<%=post.id%>/comments/<%=comment.id%>?_method=DELETE"
                                method="POST"
                            >
                                <button
                                    class="mini circular ui vertical animated red button"
                                    tabindex="0"
                                >
                                    <div class="hidden content">Delete</div>
                                    <div class="visible content">
                                        <i class="trash icon"></i>
                                    </div>
                                </button>
                            </form>
                        </div>
                        <%}%>
                    </div>
                </div>
                <% })%>
            </div>

            <form
                class="ui reply form"
                action="/posts/<%=post.id%>/comments"
                method="POST"
            >
                <div class="field">
                    <input name="comment[text]" type="text" />
                </div>
                <button
                    type="submit"
                    class="ui blue labeled submit icon button"
                >
                    <i class="icon edit"></i> Add Reply
                </button>
            </form>
        </div>
    </div>
</div>
