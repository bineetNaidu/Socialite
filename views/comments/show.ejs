<% layout('./layouts/boilerplate') -%>
<div class="ui stackable two column grid">
    <div class="column">
        <div class="ui card">
            <div class="content">
                <div class="right floated">
                    <a href="/posts/<%=post.id%>"><i class="edit icon"></i></a>
                </div>
                <img
                    class="ui avatar image"
                    src="https://semantic-ui.com/images/avatar2/large/matthew.png"
                />
                Elliot
            </div>
            <div class="image">
                <img src="<%=post.image%>" />
            </div>
            <div class="content">
                <span class="right floated meta">
                    <%=moment(post.createdAt).fromNow() %>
                </span>
                <i class="comment icon"></i>
                <a
                    class="a__tag"
                    href="/posts/<%=post.id%>/comments"
                    title="Add Comments"
                >
                    <%=post.comments.length%> comments
                </a>
            </div>
        </div>
    </div>

    <div class="column">
        <div class="ui comments">
            <h3 class="ui dividing header">Comments</h3>
            <div class="ui grid">
                <% post.comments.forEach(function(comment){ %>
                <div class="two column row">
                    <div class="left floated column">
                        <div class="comment">
                            <a class="avatar">
                                <img
                                    src="https://semantic-ui.com/images/avatar2/large/matthew.png"
                                />
                            </a>
                            <div class="content">
                                <a class="author">Joe Henderson</a>
                                <div class="metadata">
                                    <span class="date"
                                        ><%=moment(comment.createdAt).fromNow()
                                        %></span
                                    >
                                </div>
                                <div class="text">
                                    <%=comment.text%>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="right floated column">
                        <div class="ui buttons">
                            <a
                                class="mini circular ui vertical animated teal button"
                                href="/posts/<%=post.id%>/comments/<%=comment.id%>/edit"
                            >
                                <div class="hidden content">Edit</div>
                                <div class="visible content">
                                    <i class="pencil alternate icon"></i>
                                </div>
                            </a>
                            <div class="or"></div>
                            <form
                                action="/posts/<%=post.id%>/comments/<%=comment.id%>?_method=DELETE"
                                method="POST"
                            >
                                <button
                                    class="mini circular ui vertical animated red button"
                                    tabindex="0"
                                >
                                    <div class="hidden content">Delete</div>
                                    <div class="visible content">
                                        <i class="trash icon"></i>
                                    </div>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
                <% })%>
            </div>

            <form
                class="ui reply form"
                action="/posts/<%=post.id%>/comments"
                method="POST"
            >
                <div class="field">
                    <input name="comment[text]" type="text" />
                </div>
                <button
                    type="submit"
                    class="ui blue labeled submit icon button"
                >
                    <i class="icon edit"></i> Add Reply
                </button>
            </form>
        </div>
    </div>
</div>
